/* components/dynamiciput/dynamiciput.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  align-items: flex-start;  
}
.input-del-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: flex-start;
  width: 100%;
}
.input-del-item-1{
  position: relative;
   display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: flex-start;
   width: 100%;
}
.input-del-item-1 input{
  height: 35px;
  padding: 0px 5px; 
  color: #000;
  border: 1px solid #CCCCCC;
  margin: 5px 0px;  
  width: 100%;
}

.price-item{ 
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: flex-start;
   width: 100%;
}
.price-item input{
  height: 35px;
  padding: 0px 5px; 
  color: #000;
  border: 1px solid #CCCCCC;
  margin: 5px 0px; 
  width: 100px;
}
.deleteInputText{ 
  text-decoration: underline;
  color: red;
  margin-left:5px; 
  margin-top:5px;
}

.input-add-item{
   display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
  align-self: center; 
  width: 100%;
}

.addInputText{
  text-decoration: underline;
  color: green;
  margin-top:5px; 
}

.cleanInputText{
   width: 35px;
   height: 35px;    
   background: #CCCCCC;
   border: 1px solid #CCCCCC;
   text-align: center;   
   font-size: 15px;
   color: #fff;  
   line-height: 35px;
   border-top-right-radius: 5px;
   border-bottom-right-radius: 5px;
}

.banner{
  position: relative;
}
.deleteimg{
  position: absolute;
  right: 10px;
  bottom:10px;
  height: 30px;
  width: 30px;
}
.deletebtn{
  position: absolute;
  right: 20px;
  bottom:10px;
  height: 20px;
  width: 30px;
  line-height: 20px;
  font-size: 10px;
  padding: 0px;
  margin: 0px;
}
.image-item{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: flex-start;
  width: 100%;   
}

.logopreview{
  position: relative;
}