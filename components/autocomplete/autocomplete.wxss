.scroll-view-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: flex-start;
  height: 35px;
  border-top: 1px solid #CCCCCC;
}
.scroll-view-item-hover{
  background: #CCCCCC;  
  font-weight: bold;
}
.scroll-view-item text{
  padding-left:5px; 
}
.container-float-mask{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0; 
  background: rgba(0,0,0,0.8); 
  z-index: 9999;
}
.container-float{
  position: absolute; 
  width: 100%; 
  left: 0px;
  top: 10%; 
  background: rgba(255,255,255,1);  
  padding-bottom: 2px;  
}