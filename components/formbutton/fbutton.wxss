 .wrap-button-adv{
  height: 40px;
  display: flex;
  position: relative;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content:flex-start;
  margin: 0px 0px;
}
 
.wrap-button-adv text{
  font-size: 12px;
  color:#40d37a; 
  text-align: left;
}
.wrap-button-adv button{
  height: 40px;
  width: 100%;
  margin-left: 0px;
  margin-right: 0px;
  padding: 0px; 
  position: absolute;
  top: 0px;
  left: 0px;
  opacity: 0;
  z-index: 99;
}
.wrap-button-adv button::after{
  border: 0px; 
}