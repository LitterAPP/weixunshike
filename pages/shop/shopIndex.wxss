.banner {
  position: relative;
}

.shopInfo {
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  left: 10px;
  bottom: 10px;
}

.shopInfo image {
  width: 35px;
  height: 35px;
  border: 2px solid #fff;
}

.nameInfo {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  align-content: flex-start;
  justify-content: flex-start;
  margin-left: 5px;
}

.nameInfo text {
  font-size: 15px;
  color: #fff;
}

.nameInfo image {
  height: 10px;
  width: 10px;
  margin-left: 3px;
  border: 0px;
}

.followInfo {
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  right: 10px;
  bottom: 10px;
}
.followNumber{
   display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-content:center;
}
.followNumber text{
  font-size: 12px;
  color: #EBEBEB;
}

.nav {
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  height: 45px;
}
.nav-sec{
  justify-content: center;
  height: 35px;
} 

.nav-third{
   justify-content: space-around;
  height: 70px;
}

.nav-item {
}
 
.nav-sec-item{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  color: #515151;
  width: 50px; 
  border-left: 1px solid #ccc;
}

.nav-item image {
  height: 20px;
  width: 40px;
}

.nav-item-index {
  border-bottom: 2px solid #ff4040;
}

.coupon {
  display: flex;
  height: 35px;
  background: #FFC125;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: center;
}

.coupon-txt-1 {
  background: #fff;
  color: #ff4040;
  border: 1px solid #ff4040; 
  font-size: 11px;
  padding: 0px 2px;
  border-radius: 5px;
}

.coupon-txt-2 {
  font-size: 11px; 
  color: #FF0000;
  margin-left:5px; 
}

.wellcome{
  display: flex;
  height: 35px; 
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: flex-start;
}
.wellcome text{
  font-size: 13px;
  color: #CDB79E;
  margin-left:10px; 
}
.nav-item-bottom{
  justify-content: flex-start;
  height: 45px;
}

.getcoupon{
  position: fixed;
  top:0px;
  left: 0px;
  background: rgba(0,0,0,0.8)
}
.getcoupon-scroll-view{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -110px;
  margin-top: -150px;
}
.coupon-container{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-content: center;
  margin: 2px 0px;
}
.coupons{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  background: #fff; 
  width: 200px;  
  margin-left: 5px;
  margin-right: 5px;
  border-radius: 5px;  
}
.coupons text{
  color: #575757;
  font-size: 13px;
  text-align: center;
  padding-top:5px; 
  max-width: 180px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.coupon-item{
  display: flex;
  flex-direction: row;
  height: 60px;  
  width: 200px;
  align-items: center;
  align-content:center;
  justify-content: space-between; 
  padding: 2px 2px;
  margin-top: 1px;
  background: #FFEFD5;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

.coupon-item image{
  height: 40px;
  width: 40px;
  margin: 2px;
}
.coupon-item-1{
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content:center; 
  width: 70px;
  height: 40px;
}

.coupon-bottom{
  width: 100%;
  position: absolute;
  bottom: 15px;
  left: 0px;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-content: center;
}

.activityText{
  height: 500px;
  width: 320px;
  position: absolute;
  top: 50%;
  left: 50%;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-content: center;
  margin-top: -250px;
  margin-left: -160px;
}
.activityText text{
  color:yellow;
  font-weight:blod;
  font-size:18px;
}
.activityText image{
  width: 320px;
  height: 400px;
}


.open-coupon-btn{
  position: fixed;
  left: 0px;
  bottom: 50px;
}
.open-coupon-btn image{
  height: 30px;
  width: 30px;
}