.order-list{
  background: #f2f2f2;
  margin-top: 10px;
}
.order-item{
  background: #fff;
  margin-bottom:10px;
  
}
.order-item-1{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-between;   
  padding: 5px;
}

.order-item-1 image{
  height: 60px;
  width: 60px;
  border: 1px solid #b4b4b4;
  border-radius: 50%; 
}
.order-item-1-2{
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center; 
}

.order-item-1-2-1{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-between;
}
.order-item-1-2-1 text{
  margin-left: 5px;
  color: #000;
  font-size: 15px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;  
}

.order-item-2{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content:  flex-end;
  height: 30px;
  border-bottom: 1px solid #f2f2f2;
}

.order-item-2 text{
  font-size: 15px;
  color: #000;
  margin-right:10px; 
}

.no-order{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: center;
  color: #13227a;
  text-underline-position:  below;
}
.click-hover{
  background: #F2F2F2;
}
.order-status text{
  font-size: 14px;
  color: #d70606;
}
.order-bar{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  margin-bottom:10px;
  padding: 5px 0px; 
}
.order-bar image{
  height: 30px;
  width: 30px;
}
.order-bar view{
  display: flex;
  flex-direction:column;
  align-content: center;
  align-items: center;
  padding: 5px;
  width: 50px;
  height: 50px;
}
.order-bar text{
  font-size: 15px;
  color: #666;
}

.seller-switch{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content:  flex-end;
  margin: 5px;
}
.seller-switch text{
  font-size: 13px;
  color: #666;
}