page {
  background: #fff;
}
.address{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-between;
  padding: 5px 10px;
  background: #fff;
}
.adderss-info{
  display: flex;
  flex-direction: column;
  padding: 5px;
}
.adderss-info text{
  color:#666;
  font-size:15px;
}

.address image{
  width: 30px;
  height: 30px;
}
.xinfeng image{
  height: 5px;
}

.product-info{
  display: flex;
  flex-direction: row;
  padding: 5px 10px;
  align-items: center;
  align-content: center;
  justify-content: space-between;
  border-top:5px solid #f2F2F2;
  border-bottom:5px solid #f2F2F2;
}

.product-info image{
  height: 80px;
  width: 80px;
  border: 1px solid #b4b4b4;
  border-radius: 50%;
}

.product-info-1{
  display: flex;
  flex-direction: column;
}
.product-info-1-1{
  color: #000;
  font-size: 14px;
  font-weight: bold;
}
.product-info-1-2{
  color: #666;
  font-size: 13px;
}

.product-info-1-3{
  color: #000;
  font-size: 15px;
  font-weight: bold;
  padding-top:10px; 
}

.product-group-number{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-between;
  margin: 5px 10px;
}
.product-group-number text{
  font-size: 14px;
  color: #666;
}

.fix-bottom-1{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: flex-end;
  padding: 0px 0px;
}

.fix-bottom-1-1{
  color: #000;
  font-size: 14px;
}


.fix-bottom-1-2{
  color: #d70606;
  font-size: 16px;
  font-weight: bold;
}

.fix-bottom-1-3{
  color: #d70606;
  font-size: 12px; 
  padding: 0 5px;
}

.fix-bottom-1-4{
  background: #d70606;
  color: #fff;
  font-size: 14px; 
  height: 50px;
  line-height: 50px;
  width: 100px;
  text-align: center;
}

.account-item{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
}