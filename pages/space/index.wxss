.header{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
  height: 180px;
  background: linear-gradient(#451920,#810020);
}
.userinfo{
  display: flex;
  flex-direction:column;
  align-content: center;
  align-items: center;
}
.userinfo image{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border:2px solid #fff;
}
.userinfo text{
  font-size: 15px;
  color: #fff;
}

.item-nav{

  background: #F2F2F2;
  padding: 10px 0px;
}

.item{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-between;
  height: 45px; 
  padding: 0px 10px;
  background: #fff;
  margin-bottom:1px; 
}
.item image{
  height: 25px;
  width: 25px;
}
.left{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-between;  
}
.left text{
  font-size: 15px;
  color: #2c2c2c;
  margin-left: 5px;
}

.click-hover{
  background: #F2F2F2;
}